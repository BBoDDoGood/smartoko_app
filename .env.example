# ==============================================
# SmartOkO App - Environment Template
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values
# ==============================================

# Environment
NODE_ENV=
APP_ENV=
APP_NAME=
APP_VERSION=

# API Configuration
API_BASE_URL=
API_VERSION=v1
API_TIMEOUT=

# WebSocket Configuration
SOCKET_URL=
SOCKET_RECONNECT_ATTEMPTS=
SOCKET_HEARTBEAT_INTERVAL=

# Database Configuration
DB_CONNECTION_STRING=
DB_READ_ONLY=true

# Security Configuration - NEVER COMMIT REAL VALUES
ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here
CERTIFICATE_PIN_ENABLED=
CERTIFICATE_PINS=

# Logging Configuration
LOG_LEVEL=
LOG_TO_FILE=true
LOG_MAX_FILES=

# Development Tools
FLIPPER_ENABLED=
REACTOTRON_ENABLED=
DEV_MENU_ENABLED=

# Performance Monitoring
PERFORMANCE_MONITORING=
ERROR_TRACKING_ENABLED=
SENTRY_DSN=

# Feature Flags
REALTIME_ENABLED=true
OFFLINE_MODE_ENABLED=true
ANALYTICS_ENABLED=

# Notification Configuration
PUSH_NOTIFICATION_ENABLED=true
FIREBASE_PROJECT_ID=
FIREBASE_APP_ID=

# Image & Media
IMAGE_CACHE_SIZE=
IMAGE_QUALITY=
VIDEO_ENABLED=

# Localization
DEFAULT_LANGUAGE=ko
SUPPORTED_LANGUAGES=ko,en,zh,ja,th,ph
RTL_ENABLED=false